<div class="book-wrap">

<h1>Book</h1>
<table class="table">
  <thead>
    <tr>
      <th class="header1">Title</th>
      <th class="header2">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @books.each do |book| %>

      <tr>
        <div>
          <td><span class="table-text"><%= book.title %></span></td>
          <td><span class="table-text"><%= book.body %></span></td>
          <td>
        </div>
          <span>
            <%= link_to 'Show', book_path(book.id), class: "link-spacing" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Edit", edit_book_path(book.id), class: "link-spacing" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "link-spacing" %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New Book</h1>


<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <h1></h1>
  <%= f.submit 'Create Book' %>
<% end %>
</div>